@model Payroc_UrlShortner.Models.Index_VM

@{
    ViewData["Title"] = "URL Shortener";
}
<div class="card">
    <div class="card-header">
        <h1 class="card-title">Simple URL Shortener</h1>
    </div>
    <div class="card-body" id="urlForm">
        <p class="card-text">
            Please enter the you would like to shorten bewlow.
        </p>
        <form enctype="application/x-www-form-urlencoded" method="POST" asp-controller="Home" asp-action"="Index">
            <label class="form-lable" for="url">
                URL
            </label>
            <input type="url" name="url" cclass="form-control" />
            <button type="submit" class="btn btn-primary">Shorten</button>
        </form>
        @if(ViewData["Link"] != null)
        {
            <div>
                Here is your link <a class="btn btn-link" href="@ViewData["Link"].ToString()">@ViewData["Link"].ToString()</a>
            </div>
        }
    </div>
</div>

